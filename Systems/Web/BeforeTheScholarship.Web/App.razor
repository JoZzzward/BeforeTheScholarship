<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(SimpleLayout)">
                <Authorizing>
                    <MudText Typo="Typo.h4" Color="Color.Primary">Please wait, we are authorizing you...</MudText>
                </Authorizing>
                <NotAuthorized>
                    @if (@context.User.Identity?.IsAuthenticated is true)
                    {
                        <MudText Typo="Typo.h4" Color="Color.Primary">You are not authorized to be here.</MudText>
                    }
                    else
                    {
                        <Login />
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <PageNotFoundView/>
        </NotFound>
    </Router>
</CascadingAuthenticationState>