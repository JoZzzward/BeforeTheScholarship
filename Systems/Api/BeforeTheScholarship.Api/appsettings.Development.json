{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} | INFO | ({CorrelationId})] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "errorlog.txt",
          "outputTemplate": "[{Timestamp:HH:mm:ss} | WARN | ({CorrelationId})] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  },
  "Database": {
    "Type": "PostgreSQL",
    "ConnectionString": "Server=localhost; Port=5432; Database=BeforeTheScholarship; UserId=postgres ;Password=Passw0rd"
  }
}
